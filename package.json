{
  "name": "jwt-inspect",
  "version": "0.1.0",
  "description": "A pure TypeScript library for inspecting JWT tokens.",
  "main": "jwt-inspect.bundle.js",
  "module": "jwt-inspect.module.js",
  "jsnext:main": "jwt-inspect.module.js",
  "types": "jwt-inspect.module.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/index.js > dist/jwt-inspect.bundle.js && copyfiles package.json README.md LICENSE.md dist",
    "test": "karma start --single-run",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "release": "standard-version",
    "npmpublish": "cd dist && npm publish",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rars/jwt-inspect"
  },
  "keywords": [
    "JWT"
  ],
  "author": "Richard Russell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rars/jwt-inspect/issues"
  },
  "homepage": "https://github.com/rars/jwt-inspect#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jasmine": "^4.3.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.13",
    "copyfiles": "^2.4.1",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jasmine": "^4.6.0",
    "jasmine-core": "^4.6.0",
    "jsdom": "^22.0.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^0.45.1",
    "standard-version": "^4.2.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
